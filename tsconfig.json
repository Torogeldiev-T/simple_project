{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "build",
        "removeComments": false,
        "noEmitOnError": false,
        "noStrictGenericChecks": true,
        "skipLibCheck": true,
        "ignoreDeprecations": "5.0",
        "allowJs": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/main.ts", "src/**/*", "knexfile.ts"
    ]
}